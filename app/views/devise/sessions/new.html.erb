<center>
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <center><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></center>
    <span style="color:red;">Remember me on this computer</span>
    <p>New user? <%= render "devise/shared/links" %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>


</center>